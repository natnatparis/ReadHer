<div class="container">
<div class="row">
<ul>
  <% @messages.each do |message| %>
    <% if message.body %>
      <li>
        <h4><%= message.user.first_name %></h4>
        <p><%= message.body %></p>
      </li>
    <% end %>
  <% end %>
</ul>
</div>

<div class="row">
<%= form_for [@conversation, @message] do |f| %>
  <div class="field">
    <%= f.text_area :body, placeholder: "Your message", class:"flex-fill" %>
  </div>

  <%= f.submit "Send" %>
<% end %>
</div>

</div>