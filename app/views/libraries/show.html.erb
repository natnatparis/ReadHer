<p id="notice"><%= notice %></p>
<div class="container">
    <div class="card" id="show-card">

    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Book</th>
          <th>Author</th>
          <th>Genre</th>
        </tr>
      </thead>
      <tbody>
      <% current_user.library.crushes.each do |crush| %>
        <tr>
          <td><strong><%= crush.book_title %></strong></td>
          <td><%= crush.author_name %></td>
          <td><%= crush.genre %></td>
          <td><%= crush.id %></td>
          <td><button type="button" class="btn btn-secondary btn-sm" id="remove-btn"> <%= link_to "Remove from cart", crush_library_path, :method=>:delete %></button></td>
        </tr>
      <% end %>
      <p>Number of crushes <%= current_user.crushes.count %><p>

      </tbody>
    </table>
    <div class="d-flex bd-highlight">
    <div class="p-2 flex-fill bd-highlight align-items-end" id="btn-right"><div class="btn btn-success" id="back" ><%= link_to 'Back', root_path %></div></div>
    </div>
        </div>
</div>
