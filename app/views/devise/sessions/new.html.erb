<div class="container">
  <div class="row">
    <div class="col-sm-6 mx-auto mt-2 ">
        <divclass="form-signin text-center mt-4" >
          <a class=" mt-3 mb-3" href="#"><%= image_tag "logo_readher-black.png", :class => "logo_navbar" %></a>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h4 class="mt-5 mb-2">Please sign in </h4>

            <div class="field text-left mb-3"> 
              <%= f.label :email  %>
              <%= f.email_field :email, :class => "form-control", :id =>"inputEmail" , autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field text-left">
              <%= f.label :password %>
              <%= f.password_field :password, :class => "form-control", autocomplete: "current-password", :id =>"inputEmail"  %>
            </div>

            <% if devise_mapping.rememberable? %>
            <div class="checkbox ml-0 mt-2 d-flex justify-content">
      
            <div class="field">

              <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
                </div>
              </div>

            <% end %>

            <div class="actions d-flex justify-content-center">
              <%= f.submit "Log in", :class => "btn  btn-dark ", :id => "btn-signin-signup"  %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
</div>