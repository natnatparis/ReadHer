<div class="container">

<br>
  <div class="card p-2 my-2" id="square">
    <h5 class="card-header border-0" id="title-crush">
      <a> <b><%= @crush.book_title%> </b></a>
    </h5>
      <div class="card-body">
        <p class="card-author "> <%= @crush.user.first_name %> <%= @crush.user.last_name %></p>
        <div class="card-subtitle mt-2 mb-2 text-muted" id="kind_of_book"><%= @crush.genre %></div>
        <p class="card-quote">“<%= @crush.quote %>”</p>
        <p class="card-credit"><%= @crush.author_name %> (<%= @crush.author_country %>)</p>
        <p class="card-text"><%= @crush.description %><p>

        <hr>
        
        </li>
    </ul>


        <% if current_user != @crush.user %>
        <ul class="nav nav-pills nav-fill mt-5">
          <li class="nav-item" >
             <%= link_to "Add to my library", crush_libraries_path(:id => @crush), method: :post, class: 'crush-link-btn', id: 'crush-link' %>
          </li>
          <% end %>
        <% if current_user && current_user != @crush.user %>
          <li class="nav-item" >
          <%= link_to "Who shared this ?", user_path(@crush.user), class: "crush-link-btn", id: "crush-link"%>
       </li>
        </ul>
          <% end %>

          <% if current_user == @crush.user %>
          <a class="crush-link-btn" id="crush-link" <%= link_to "Edit", edit_crush_path(@crush)%> </a>
          <a class="crush-link-btn" id="crush-link" <%= link_to "Delete", crush_path(@crush), method: :delete %> </a>
        <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Add a Comment</h5>
          <%= form_tag crush_comments_path(@crush), method: :post do %>
          <div class="form-group">
            <%= text_area_tag :content, placeholder = "Add a comment here...", class: 'form-control no-border' %>
          </div>
            <%= submit_tag "Comment", class: 'btn btn-default btn btn-primary' %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<br>

<div class="container">
  <div class="container">
  <% @crush.comments.each do |comment| %>
  <div class="media">
    <div class="media-body">
      <p class="mt-0"><%= comment.user.first_name %></p>
      <p class="mt-0"><%= comment.created_at.to_formatted_s(:long)%></p>
      <p class="mt-0"><%= comment.body %></p>
        <% if comment.user_id == current_user.id %>
        <%= link_to 'Delete', crush_comment_path(crush_id: @crush, id: comment), method: :delete %>
        <% end %>
    </div>
  </div> <br>
  <% end %>
</div>
</div>
