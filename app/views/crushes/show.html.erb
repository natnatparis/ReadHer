

<div class="container">
<br>
  <div class="card  mb-5">
    <h5 class="card-header" id="title-crush">
      <a> <%= @crush.book_title%> </a> 
    </h5>     
      <div class="card-body">
        <p class="card-author "> <%= @crush.user.first_name %> <%= @crush.user.last_name %></p>
        <div class="card-subtitle mt-2 mb-2 text-muted" id="kind_of_book"><%= @crush.genre %></div>
        <p class="card-quote">“<%= @crush.quote %>”</p>
        <p class="card-credit"><%= @crush.author_name %> (<%= @crush.author_country %>)</p>
        <p class="card-text"><%= @crush.description %><p>

        <hr>
        <ul class="list-group-flush ">
        <li class="list-group">
            <div class="row justify-content-around" id="badge">
                <a href="#" class=""> #secondary </a>
                <a href="#" class=""> #secondary </a>
                <a href="#" class=""> #secondary </a>
                <a href="#" class=""> #secondary </a>

            </div>
        </li>
    </ul>


      

        <% if current_user != @crush.user %>

        <ul class="nav nav-pills nav-fill mt-5">
          <li class="nav-item" >
             <a href="#" class="crush-link-btn" id="crush-link" <%= link_to "Add to my library"%> </a>
          </li>

          <li class="nav-item" >
          <a href="#" class="crush-link-btn" id="crush-link" <%= link_to "Who shared this ?"%> </a>
       </li>
        </ul>

         
          <% end %>
          <% if current_user == @crush.user %>
          <a class="crush-link-btn" id="crush-link" <%= link_to "Edit"%> </a>
        <% end %>
  </div>
</div>


